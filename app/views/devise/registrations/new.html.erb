<%= render "devise/shared/header" %>

<div id="sign-up">
  <h1>Sign up</h1>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div>
      <div class="label">Email</div>
      <%= f.email_field :email, :autofocus => true, class: 'button' %>
    </div>

      <div>
        <div class="label">Password</div>
        <%= f.password_field :password, class: 'button'  %>
      </div>

      <div>
        <div class="label">Password confirmation</div>
        <%= f.password_field :password_confirmation, class: 'button'  %>
      </div>

    <div>
      <%= f.submit "Sign up", class: 'button submit' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
